<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".security.restore.PasswordRestoreFragment">

    <TextView
        android:id="@+id/restore_password_2_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Restore password"
        android:textColor="#03c8a4"
        android:textColorLink="#03c8a4"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/textFollowLink"
        android:layout_width="296dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="344dp"
        android:text="We sent an email with a link to reset your password to your email
Follow the link in the letter for further action."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/restore_password_2_header" />

    <Button
        android:id="@+id/mail_send"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:layout_marginTop="112dp"
        android:text="Continue"
        android:textColor="#FFFFFF"
        app:cornerRadius="50dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFollowLink" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gmail"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="146dp" />

</androidx.constraintlayout.widget.ConstraintLayout>